<% end %>

<a href="<%= new_session_url %>">Sign In Here!</a>

<form action="<%= users_url %>" method="POST">
    <label> Username
        <input type="text" name="user[username]">
    </label>
    <label> Password
        <input type="password" name="user[password]">
    </label>
    <input type="submit" value="Sign Up!">
</form>

